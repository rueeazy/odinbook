<div class="container-fluid gedf-wrapper">
  <div class="row">
  <!--- \\\\\\\Left Profile Info-->
    <div class="col-md-3">
      <%=render 'layouts/left_column'%>
    </div>
  <!--- \\\\\\\Left Profile Info-->

  <!--- \\\\\\\Middle Container-->
    <div class="col-md-6 gedf-main">
      <% current_user.friend_requests.each do |request| %>
        <div class="card mb-3 p-3">
          <div class="row">
            <div class="col-md-2 col-sm-2">
              <%= image_tag user_avatar(request, 80), class: "rounded-circle" %>
            </div>
            <div class="col-md-7 col-sm-7">
              <h5><a href="<%=user_path(request)%>" class="profile-link"><%=request.first_name%> <%=request.last_name%></a></h5>
            </div>
            <div class="col-md-3 col-sm-3">
              <%= button_to "Accept", friendship_path(request), method: :patch, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
      <% end %>
      
      <% current_user.friends.each do |friend| %>
        <div class="card mb-3 p-3">
          <div class="row">
            <div class="col-md-2 col-sm-2">
              <%= image_tag user_avatar(friend, 80), class: "rounded-circle" %>
            </div>
            <div class="col-md-7 col-sm-7">
              <h5><a href="<%=user_path(friend)%>" class="profile-link"><%=friend.first_name%> <%=friend.last_name%></a></h5>
            </div>
            <div class="col-md-3 col-sm-3">
              <button type="button" class="btn btn-primary float-right" disabled><i class="fas fa-user-friends"></i> Friends</button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!--- \\\\\\\End Middle Container-->

    <!--- \\\\\\\Side Posts Section-->
    <div class="col-md-3">
        <%=render 'layouts/right_column'%>
    </div>
</div>