<div class="container-fluid gedf-wrapper">
  <div class="row">
  <!--- \\\\\\\Left Profile Info-->
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <%= image_tag url_for(user_avatar(current_user, 100)), class: "rounded-circle" %>
                <div class="h5"><%= current_user.first_name%> <%=current_user.last_name%></div>
                <div class="d-flex justify-content-between">
                <%= button_to 'New Post', new_post_path, method: :get, class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    </div>
  <!--- \\\\\\\Left Profile Info-->

  <!--- \\\\\\\Middle Container-->
    <div class="col-md-6 gedf-main">
      <% @users.each do |user| %>
        <% next if user == current_user %>
        <div class="card mb-3 p-3">
          <div class="row">
            <div class="col-md-2 col-sm-2">
              <%= image_tag user_avatar(user, 80), class: "rounded-circle" %>
            </div>
            <div class="col-md-7 col-sm-7">
              <h5><a href="<%=user_path(user)%>" class="profile-link"><%=user.first_name%> <%=user.last_name%></a></h5>
            </div>
            <div class="col-md-3 col-sm-3">
              <% if !current_user.friend?(user) %>
                <%= button_to "Add Friend", friendships_path(friend_id: user.id), class: "btn btn-primary float-right", method: :post %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!--- \\\\\\\End Middle Container-->

    <!--- \\\\\\\Side Posts Section-->
    <div class="col-md-3">
      <div class="card gedf-card">
          <div class="card-body">
              <h5 class="card-title">Card title</h5>
              <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                  card's content.</p>
              <a href="#" class="card-link">Card link</a>
              <a href="#" class="card-link">Another link</a>
          </div>
      </div>
      <div class="card gedf-card">
        <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                card's content.</p>
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    </div>
  </div>
</div>