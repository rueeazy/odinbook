<div class="container">
  <div class="sign-in-page">
    <div class="sign-in-container">
      <div class="sign-in-content">
        <div class="row">
          <div class="col-lg-6">
            <div class="left-hand-form">
              <div class="sign-in-header">
                <h1><i class="fab fa-opera fa-1x text-primary"></i>dinbook</h1>
              </div>
              <div class="sign-in-description mt-5 mb-5">
                <p class="text-secondary">
                  Odinbook helps you connect and share with the people in your life.
                </p>
              </div>
              <div class="sign-in-image">
                <%= image_tag("sign-in-img-1.jpg", :alt => "sign-in-image") %>
              </div>
            </div>
          </div>

          <div class="col-lg-6 slash">
            <div class="sign-in-form">
              <h5 class="mb-5">Sign in</h5>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Log in", class: "btn btn-primary mb-5" %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
