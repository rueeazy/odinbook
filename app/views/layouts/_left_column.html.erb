<div class="card">
    <div class="card-body d-flex flex-column align-items-center">
        <%= image_tag url_for(user_avatar(current_user, 100)), class: "rounded-circle mb-2" %>
        <div class="h5"><%= current_user.first_name%> <%=current_user.last_name%></div>
        <div class="h7 text-center"><%= current_user.bio%></div>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <div class="d-flex flex-column align-items-center">
                <%= link_to 'Friends', friendships_path, method: :get, class: "h6 text-muted text-center" %>
                <div class="h5"><%=current_user.friends.count%></div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="h6 text-muted text-center">Community Posts</div>
            <div class="d-flex justify-content-center">
            <div class="h5"><%=current_user.posts.count%></div>
            </div>
        </li>
        <li class="list-group-item text-center h6">
            <%= link_to 'View Profile', user_path(current_user), method: :get %>
        </li>
    </ul>
</div>